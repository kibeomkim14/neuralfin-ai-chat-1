{
  "name": "neuralfin-ai-chat",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "pnpm install && cd frontend && pnpm install && cd ../backend && ./setup.sh",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd backend && ./start.sh",
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "build": "cd frontend && pnpm build",
    "start": "cd frontend && pnpm start"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
} 